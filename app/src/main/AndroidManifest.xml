<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.jelvix.jelvixkotlindemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application android:name=".presentation.JelvixDemoKotlinApp"
         android:allowBackup="true"
         android:label="@string/app_name"
         android:icon="@mipmap/ic_launcher"
         android:roundIcon="@mipmap/ic_launcher_round"
         android:supportsRtl="true"
        android:usesCleartextTraffic="true"
         android:theme="@style/AppTheme">

        <activity
            android:name=".presentation.ui.activity.splash.SplashActivity"
            android:theme="@style/AppTheme.Splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.ui.activity.root.RootActivity"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden"
            android:theme="@style/AppTheme.Root.RootActivity"/>

    </application>
</manifest>
